** 2048. Next Greater Numerically Balanced Number **

# Approach 1:
class Solution:
    def solve(self, x: int) -> bool:
        s = str(x)
        vec = [0]*10
        for ch in s:
            vec[ord(ch)-48] += 1
        for ch in s:
            c = ord(ch)-48
            if c == 0 or vec[c] != c:
                return False
        return True

    def nextBeautifulNumber(self, n: int) -> int:
        i = n + 1
        while True:
            if self.solve(i):
                return i
            i += 1

# Approach 2:
class Solution:
    def nextBeautifulNumber(self, n: int) -> int:
        i=n+1
        while True:
            c=Counter(str(i))
            flag=True
            for k,v in c.items():
                if int(k)==v:
                    pass
                else:
                    flag=False
                    break
            if flag:
                return i
            i+=1
