** 3349. Adjacent Increasing Subarrays Detection I **

# Approach 1:
class Solution:
    def hasIncreasingSubarrays(self, nums: List[int], k: int) -> bool:
        store = []
        nums.append(-1005)
        count, n = 1, len(nums)
        for i in range(1, n):
            if nums[i - 1] < nums[i]:
                count += 1
            else:
                store.append(count)
                count = 1
        
        _2x = k + k
        n = len(store)
        for i in range(1, n):
            if store[i - 1] >= k and store[i] >= k:
                return True

        for x in store:
            if x >= _2x:
                return True
        return False

# Approach 2:
class Solution:
    def strictM(self,nums):
        for i in range(1,len(nums)):
            if nums[i]<=nums[i-1]:
                return False
        return True

    def hasIncreasingSubarrays(self, nums: List[int], k: int) -> bool:
        l,r=0,k
        check=False
        while r+k <= len(nums):
            if self.strictM(nums[l:r]):
                if self.strictM(nums[r:r+k]):
                    return True
            l+=1
            r+=1
        return False
